{
	"name": "browser-extension-starter",
	"version": "0.0.1",
	"description": "A web browser extension starter boilerplate. Runs on Chrome and Firefox.",
	"main": "index.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development webpack -d",
		"prod": "cross-env NODE_ENV=production webpack -p",
